% --- TU Delft Fonts: ---------------------------------------------------------
\newfontfamily\tudtitlefamily[
    Path = tudelft-light/fonts/,
    Extension = .ttf%,
]{TUDelft-UltraLight}

\newfontfamily\tudrmfamily[
    Path = tudelft-light/fonts/,
    Extension = .ttf,
    BoldFont = *_Bold,
    ItalicFont = *_Italic,
    BoldItalicFont = *_Bold_Italic
]{Georgia}

\newfontfamily\tudsffamily[
    Path = tudelft-light/fonts/,
    Extension = .ttf,
    BoldFont = *_Bold,
    ItalicFont = *_Italic,
    BoldItalicFont = *_Bold_Italic
]{Arial}
